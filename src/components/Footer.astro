---
import logo from "@assets/images/logos/dmeyers.webp";
import { Image } from "astro:assets";
const currentYear = new Date().getFullYear();
---

<footer class="bg-gray-800">
  <div class="mx-auto max-w-screen-xl px-4 py-8 lg:py-12">
    <div class="flex flex-col items-center gap-8 lg:flex-row lg:justify-between">
      <!-- Logo and Company Info -->
      <div class="flex flex-col items-center text-center lg:items-start lg:text-start">
        <div class="flex items-center gap-4">
          <Image
            src={logo}
            alt="דותן מאיר - יועץ איטום"
            class="size-16 rounded-full border border-gray-600"
            quality={95}
            loading="lazy"
            width={logo.width}
            height={logo.height}
          />
          <div>
            <h3
              class="bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-2xl font-bold text-transparent">
              דותן מאיר
            </h3>
            <p class="text-sm text-gray-400">יועץ איטום מוסמך ומומחה בדק בית</p>
          </div>
        </div>
      </div>

      <!-- Navigation Links -->
      <nav class="grid gap-8 text-center sm:grid-cols-2 lg:grid-cols-4">
        <a href="/" class="text-gray-400 transition-colors hover:text-white focus:text-white">
          ראשי
        </a>
        <a
          href="/solutions"
          class="text-gray-400 transition-colors hover:text-white focus:text-white">
          פתרונות
        </a>
        <a
          href="/projects"
          class="text-gray-400 transition-colors hover:text-white focus:text-white">
          פרויקטים
        </a>
        <a
          href="/articles"
          class="text-gray-400 transition-colors hover:text-white focus:text-white">
          מאמרים
        </a>
        <a href="/about" class="text-gray-400 transition-colors hover:text-white focus:text-white">
          אודות
        </a>
        <a
          href="/contact"
          class="text-gray-400 transition-colors hover:text-white focus:text-white">
          צור קשר
        </a>
      </nav>

      <!-- Contact Info -->
      <div class="flex flex-col items-center gap-2 text-center lg:items-end lg:text-end">
        <a
          href="tel:+972524270479"
          class="flex items-center gap-2 text-gray-400 transition-colors hover:text-white">
          <span>052-427-0479</span>
          <span class="text-blue-400">📞</span>
        </a>
        <a
          href="mailto:dotan.meyer@gmail.com"
          class="flex items-center gap-2 text-gray-400 transition-colors hover:text-white">
          <span>dotan.meyer@gmail.com</span>
          <span class="text-blue-400">✉️</span>
        </a>
      </div>
    </div>

    <!-- Divider -->
    <div class="my-8 h-px bg-gray-700"></div>

    <!-- Copyright -->
    <div
      class="flex flex-col items-center justify-between gap-4 text-center text-sm text-gray-400 sm:flex-row">
      <p>© {currentYear} דותן מאיר - יועץ איטום. כל הזכויות שמורות</p>
    </div>
    <div class="h-20"></div>
  </div>
</footer>
