---
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    label: "专砖",
    href: "/"
  },
  {
    label: "驻专拽",
    href: "/projects"
  },
  {
    label: "专",
    href: "/blog"
  },
  {
    label: "转",
    href: "/about"
  },
  {
    label: "爪专 拽砖专",
    href: "/contact"
  }
];
---

<footer class="bg-surface" role="contentinfo">
  <div class="mx-auto max-w-screen-xl px-4 py-12 lg:py-16">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-3">
      <!-- Company Info -->
      <div class="flex flex-col items-center lg:items-start">
        <div class="mb-4">
          <h3
            class="from-primary-light to-primary bg-gradient-to-r bg-clip-text text-2xl font-bold text-transparent">
            D.Meyer's
          </h3>
          <p class="text-text-secondary mt-2 text-sm">
             拽 转 , 注爪  驻 爪驻 转注砖
          </p>
        </div>
      </div>

      <!-- Navigation Links -->
      <div class="flex flex-col items-center lg:items-start">
        <h4 class="text-text-primary mb-4 text-lg font-semibold"> 专</h4>
        <nav class="flex flex-col space-y-2" aria-label=" 转转">
          {
            footerLinks.map((link) => (
              <a
                href={link.href}
                class="text-text-secondary hover:text-text-primary focus:text-text-primary transition-colors">
                {link.label}
              </a>
            ))
          }
        </nav>
      </div>

      <!-- Contact Info -->
      <div class="flex flex-col items-center lg:items-start">
        <h4 class="text-text-primary mb-4 text-lg font-semibold">爪专 拽砖专</h4>
        <address class="flex flex-col space-y-3 not-italic">
          <a
            href="tel:+972524270479"
            class="text-text-secondary hover:text-text-primary flex items-center gap-2 transition-colors">
            <span class="text-primary-light" aria-hidden="true"></span>
            <span>052-427-0479</span>
          </a>
          <a
            href="mailto:d.meyers.cons@gmail.com"
            class="text-text-secondary hover:text-text-primary flex items-center gap-2 transition-colors">
            <span class="text-primary-light" aria-hidden="true">锔</span>
            <span>d.meyers.cons@gmail.com</span>
          </a>
        </address>
      </div>
    </div>

    <!-- Divider -->
    <div class="bg-border my-8 h-px" role="separator"></div>

    <!-- Copyright -->
    <div class="text-text-tertiary text-center text-sm">
      <p>漏 {currentYear} D.Meyer's.  转 砖专转</p>
    </div>
  </div>
</footer>
