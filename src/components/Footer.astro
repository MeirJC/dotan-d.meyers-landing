---
const currentYear = new Date().getFullYear();

const footerLinks = [
  {
    label: "ראשי",
    href: "/"
  },
  {
    label: "פתרונות",
    href: "/solutions"
  },
  {
    label: "פרויקטים",
    href: "/projects"
  },
  {
    label: "מאמרים",
    href: "/articles"
  },
  {
    label: "אודות",
    href: "/about"
  },
  {
    label: "צור קשר",
    href: "/contact"
  }
];
---

<footer class="bg-gray-800">
  <div class="mx-auto max-w-screen-xl px-4 py-12 lg:py-16">
    <div class="grid grid-cols-1 gap-12 lg:grid-cols-3">
      <!-- Company Info -->
      <div class="flex flex-col items-center lg:items-start">
        <div class="mb-4">
          <h3
            class="bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text text-2xl font-bold text-transparent">
            D.Meyer's
          </h3>
          <p class="mt-2 text-sm text-gray-300">דותן מאיר - יועץ איטום מוסמך ומומחה בדק בית</p>
        </div>
      </div>

      <!-- Navigation Links -->
      <div class="flex flex-col items-center lg:items-start">
        <h4 class="mb-4 text-lg font-semibold text-white">ניווט מהיר</h4>
        <nav class="flex flex-col space-y-2">
          {
            footerLinks.map((link) => (
              <a
                href={link.href}
                class="text-gray-300 transition-colors hover:text-white focus:text-white">
                {link.label}
              </a>
            ))
          }
        </nav>
      </div>

      <!-- Contact Info -->
      <div class="flex flex-col items-center lg:items-start">
        <h4 class="mb-4 text-lg font-semibold text-white">צור קשר</h4>
        <div class="flex flex-col space-y-3">
          <a
            href="tel:+972524270479"
            class="flex items-center gap-2 text-gray-300 transition-colors hover:text-white">
            <span class="text-blue-400">📞</span>
            <span>052-427-0479</span>
          </a>
          <a
            href="mailto:d.meyers.cons@gmail.com"
            class="flex items-center gap-2 text-gray-300 transition-colors hover:text-white">
            <span class="text-blue-400">✉️</span>
            <span>d.meyers.cons@gmail.com</span>
          </a>
        </div>
      </div>
    </div>

    <!-- Divider -->
    <div class="my-8 h-px bg-gray-700"></div>

    <!-- Copyright -->
    <div class="text-center text-sm text-gray-300">
      <p>© {currentYear} דותן מאיר - יועץ איטום. כל הזכויות שמורות</p>
    </div>
  </div>
</footer>
