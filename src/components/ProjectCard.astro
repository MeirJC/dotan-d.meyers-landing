---
import ImageCarousel from "./ImageCarousel.astro";
import type { ProjectCardItem } from "@data/types";

interface Props {
  data: ProjectCardItem;
}

const { data } = Astro.props as Props;

const interval = Math.min(7500, 4000 + data.id * 750);
---

<article
  class="rounded-lg border border-gray-200 bg-white p-4 shadow-md dark:border-gray-700 dark:bg-gray-800">
  <ImageCarousel items={data.images} autoplay={true} duration={1000} autoplayInterval={interval} />
  {
    data.tags?.map((tag) => (
      <span class="mr-2 rounded bg-purple-100 px-2.5 py-0.5 text-xs font-semibold text-purple-800 dark:bg-purple-200 dark:text-purple-900">
        {tag}
      </span>
    ))
  }
  <h2 class="my-2 text-2xl font-bold tracking-tight text-gray-900 dark:text-white">
    {data.title}
  </h2>
  <p class="mb-4 font-light text-gray-500 dark:text-gray-400">
    {data.subTitle}
  </p>
  <p class="mb-4 font-light text-gray-500 dark:text-gray-400">
    {data.description}
  </p>
  <div class="flex items-center space-x-4">
    <div class="font-medium dark:text-white">
      <div>{data.location}</div>
      <div class="text-sm font-normal text-gray-500 dark:text-gray-400">
        {data.date}
      </div>
    </div>
  </div>
</article>
