---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="bg-background py-12 md:py-16">
  <div class="container mx-auto px-4">
    <div class="mx-auto max-w-3xl text-center">
      <h1 class="text-text-primary mb-4 text-4xl font-bold md:text-5xl">{title}</h1>
      <p class="text-text-secondary text-lg">{description}</p>
    </div>
  </div>
</div>
