---
import type { FeatureCardItem } from "@data/types";
import FeatureCard from "@components/FeatureCard.astro";
import office1 from "@assets/images/temp/office-1.webp";
import office2 from "@assets/images/temp/office-2.webp";

const sectionData: { title: string; description: string; cards: FeatureCardItem[] } = {
  title: "השירותים שלנו",
  description:
    "החברה מציעה מגוון פתרונות מתקדמים לתעשיית הבניה, החל משלב התכנון ועד להשלמתו, בהתאם לצרכים הספציפיים של כל לקוח.",
  cards: [
    {
      id: 1,
      title: "ייעוץ איטום",
      description:
        "פתרונות איטום מתקדמים המותאמים לכל סוגי המבנים והתשתיות, תוך שימוש בטכנולוגיות חדשניות ושיטות יישום מוכחות.",
      list: [
        "תכנון וליווי פרויקטי איטום מורכבים",
        "פתרונות איטום מתקדמים לגגות ומרתפים",
        "מערכות איטום בהזרקה ושיקום מבנים"
      ],
      image: office1,
      alt: "ייעוץ איטום",
      reverse: false,
      message: "אנו מלווים את הפרויקט משלב התכנון ועד לביצוע, עם דגש על איכות ועמידות לאורך זמן."
    },
    {
      id: 2,
      title: "ציפויי רצפה",
      description:
        "מגוון פתרונות ציפוי מתקדמים המותאמים לדרישות התעשייה המודרנית, תוך שילוב של עמידות גבוהה ואסתטיקה מושלמת.",
      list: [
        "ציפויי אפוקסי ו-MMA מתקדמים",
        "מערכות PU Cement לתעשיית המזון",
        "פתרונות דקורטיביים למבני ציבור"
      ],
      image: office2,
      alt: "ציפויי רצפה",
      reverse: true,
      message: "מספקים פתרונות ציפוי העומדים בסטנדרטים המחמירים ביותר של התעשייה."
    },
    {
      id: 3,
      title: "חיפויי גרניט ושיש",
      description:
        "מערכות חיפוי איכותיות המשלבות אסתטיקה וטכנולוגיה, עם דגש על עמידות ויופי לאורך זמן.",
      list: [
        "לוחות גרניט פורצלן בגדלים ובעוביים שונים",
        "פתרונות Outer/Double Skin למבנים",
        "משטחי עבודה למטבחים"
      ],
      image: office1,
      alt: "חיפויי גרניט ושיש",
      reverse: false,
      message: "מביאים את חומרי הגמר האיכותיים ביותר, בהתאמה מושלמת לצרכי הפרויקט."
    },
    {
      id: 4,
      title: "נגרות אומן",
      description:
        "פתרונות נגרות מתקדמים למגזר המוסדי והמלונאי, המשלבים פונקציונליות מושלמת עם עיצוב מרהיב.",
      list: [
        "ריהוט Custom Made לבתי מלון",
        "מערכות ישיבה לאודיטוריומים",
        "ריהוט מוסדי בהתאמה אישית"
      ],
      image: office2,
      alt: "נגרות אומן",
      reverse: true,
      message: "מתמחים בתכנון וייצור ריהוט איכותי בהתאמה מדויקת לדרישות הפרויקט."
    }
  ]
};
---

<section class="bg-gray-900" id="services">
  <div class="mx-auto max-w-screen-sm text-center">
    <h2 class="mb-4 text-4xl font-extrabold tracking-tight text-white">
      {sectionData.title}
    </h2>
    <p class="font-light text-gray-400 sm:text-xl">
      {sectionData.description}
    </p>
  </div>
  <div class="mx-auto max-w-screen-xl space-y-12 px-4 py-8 sm:py-16 lg:space-y-20 lg:px-6">
    {sectionData.cards.map((card) => <FeatureCard data={card} />)}
  </div>
</section>
