---
import { projectsData } from "@data/projectsData";
import ProjectCard from "@components/ProjectCard.astro";

interface Props {
  featuredOnly?: boolean;
}

const { featuredOnly = false } = Astro.props;

// Filter projects if featuredOnly is true, otherwise show all
const projects = projectsData.cards;
---

<section class="bg-background" id="projects">
  <div class="mx-auto max-w-screen-xl px-4 py-8 lg:px-6 lg:py-16">
    <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
      {projects.map((card) => <ProjectCard data={card} />)}
    </div>

    {
      featuredOnly && projects.length > 0 && (
        <div class="mt-12 text-center">
          <a
            href="/projects"
            class="bg-primary text-primary-foreground hover:bg-primary-hover focus-visible:ring-ring inline-flex items-center rounded-lg px-5 py-3 font-medium transition-colors focus:outline-none focus-visible:ring-2">
            לכל הפרויקטים
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="flip-rtl mr-2 h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
              aria-hidden="true">
              <path
                fill-rule="evenodd"
                d="M10.293 5.293a1 1 0 011.414 0l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414-1.414L12.586 11H5a1 1 0 110-2h7.586l-2.293-2.293a1 1 0 010-1.414z"
                clip-rule="evenodd"
              />
            </svg>
          </a>
        </div>
      )
    }
  </div>
</section>
