---
import img1 from "@assets/images/temp/img-1.webp"; // Keep temp images until real ones provided
import img2 from "@assets/images/temp/img-2.webp";
import img3 from "@assets/images/temp/img-3.webp";
import img4 from "@assets/images/temp/img-4.webp";
import ImageCarousel from "@components/ImageCarousel.astro";
import type { CarouselItem } from "@data/types";
import logo from "@assets/images/logos/dmeyers.webp";

const carouselData: CarouselItem[] = [
  { img: img1.src, title: "ייעוץ איטום", description: "פתרונות איטום מתקדמים" },
  { img: img2.src, title: "ציפויי רצפה", description: "ציפויי רצפה תעשייתיים ודקורטיביים" },
  { img: img3.src, title: "חיפויי גרניט", description: "פתרונות חיפוי מתקדמים" },
  { img: img4.src, title: "נגרות אומן", description: "נגרות מותאמת אישית" }
];

const sectionData = {
  title: "פתרונות מתקדמים לתעשיית הבניה",
  description:
    "החברה מציעה מגוון פתרונות, החל משלב תכנון המבנה ועד להשלמתו, בהתאם לצרכים הספציפיים של כל לקוח. בין הפתרונות שמספקת החברה ניתן למצוא: ייעוץ בתחום האיטום, ביצוע ציפוי רצפות תעשייתיות ודקורטיביות, אספקת לוחות פורצלן ושיש טבעי וכן אספקת ריהוט לפרויקטים ציבוריים.",
  button: {
    text: "תיאום פגישת ייעוץ",
    href: "#contact"
  },
  learnMore: {
    text: "הפרויקטים שלנו",
    href: "#projects"
  }
};
---

<section class="bg-gray-900 antialiased">
  <!-- Enhanced Logo Section -->
  <div class="border-b border-gray-800">
    <div class="mx-auto max-w-screen-xl px-4 py-12">
      <div class="flex flex-col items-center gap-6">
        <div class="relative">
          <div
            class="absolute -inset-1 rounded-full bg-gradient-to-r from-blue-600 to-blue-400 opacity-75 blur-sm">
          </div>
          <img
            src={logo.src}
            alt="D.Meyer's Logo"
            class="relative size-44 rounded-full border-2 border-gray-700 object-cover sm:size-52"
          />
        </div>
        <div class="text-center">
          <h1
            class="bg-gradient-to-r from-blue-400 to-blue-600 bg-clip-text py-4 text-5xl font-bold tracking-tight text-transparent sm:text-6xl">
            D.Meyer's
          </h1>
          <p class="mt-2 text-xl font-medium text-gray-400 sm:text-2xl">
            מובילים בפתרונות מתקדמים לתעשיית הבניה
          </p>
        </div>
      </div>
    </div>
  </div>
  <div class="mx-auto max-w-screen-xl px-4 py-8 sm:py-16 lg:px-6 lg:py-24" id="about">
    <div class="flex flex-col gap-8 lg:flex-row lg:gap-16">
      <div class="lg:max-w-xl xl:shrink-0">
        <div>
          <h2 class="text-3xl font-extrabold leading-none tracking-tight text-white sm:text-5xl">
            {sectionData.title}
          </h2>
          <p class="mt-5 text-base font-normal text-gray-400 sm:text-xl md:max-w-3xl">
            {sectionData.description}
          </p>
        </div>

        <div class="mt-8 flex flex-col gap-4 sm:flex-row">
          <a
            href={sectionData.button.href}
            title={sectionData.button.text}
            class="w-full shrink-0 rounded-lg bg-primary-600 px-5 py-3 text-center text-base font-medium text-white hover:bg-primary-700 focus:outline-none focus:ring-4 focus:ring-primary-800 sm:w-[182px]"
            role="button">
            {sectionData.button.text}
          </a>

          <a
            href={sectionData.learnMore.href}
            title={sectionData.learnMore.text}
            class="inline-flex w-full shrink-0 items-center justify-center rounded-lg border border-gray-600 bg-gray-800 px-5 py-3 text-center text-base font-medium text-gray-400 hover:bg-gray-700 hover:text-white focus:z-10 focus:outline-none focus:ring-4 focus:ring-gray-700 sm:w-[182px]"
            role="button">
            {sectionData.learnMore.text}
          </a>
        </div>
      </div>

      <div class="relative w-full">
        <div class="relative h-56 overflow-hidden rounded-lg md:h-96">
          <ImageCarousel items={carouselData} autoplay={true} duration={1000} />
        </div>
      </div>
    </div>
  </div>
</section>
