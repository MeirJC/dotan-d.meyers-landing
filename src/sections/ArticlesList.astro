---
import { articlesData } from "@data/articlesData";
---

<section class="bg-gray-800 py-12">
  <div class="container mx-auto px-4">
    <div class="grid grid-cols-1 gap-8 md:grid-cols-2 lg:grid-cols-3">
      {
        articlesData.map((article) => (
          <div class="overflow-hidden rounded-lg bg-gray-700 shadow-lg transition-transform duration-300 hover:scale-105">
            {article.image && (
              <img src={article.image.src} alt={article.title} class="h-56 w-full object-cover" />
            )}
            <div class="p-6">
              <div class="mb-3 flex items-center justify-between">
                <span class="text-sm text-blue-400">{article.date}</span>
                <span class="rounded-full bg-blue-600 px-2 py-1 text-xs text-white">
                  {article.category}
                </span>
              </div>
              <h3 class="mb-3 text-xl font-bold text-white">{article.title}</h3>
              <p class="mb-4 text-gray-300">{article.excerpt}</p>
              <a
                href={`/articles/${article.slug}`}
                class="inline-block rounded-lg bg-blue-600 px-4 py-2 text-white transition-colors hover:bg-blue-700">
                קרא עוד
              </a>
            </div>
          </div>
        ))
      }
    </div>
  </div>
</section>

