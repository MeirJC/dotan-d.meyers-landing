---
import Layout from "../layouts/Layout.astro";
import PageHeader from "@components/PageHeader.astro";
import ProjectsSection from "@sections/Projects.astro";
import SEOHead from "@components/SEOHead.astro";
import { siteConfig } from "../seo/seoData";

const pageTitle = "פרויקטים - דותן מאיר יועץ איטום ובדק בית";
const pageDescription =
  "פרויקטים נבחרים בתחום האיטום ובדק בית בהובלת דותן מאיר. צפו בפתרונות איטום מקצועיים, ביקורות מבנה וציפויי רצפות תעשייתיים שביצענו";
---

<Layout title={pageTitle} description={pageDescription}>
  <SEOHead
    slot="head"
    title={pageTitle}
    description={pageDescription}
    canonical={`${siteConfig.url}/projects`}
    pageType="projects"
    breadcrumbs={[
      { name: "ראשי", url: siteConfig.url },
      { name: "פרויקטים", url: `${siteConfig.url}/projects` }
    ]}
  />

  <PageHeader
    title="הפרויקטים שלנו"
    description="פרויקטים נבחרים בתחום ייעוץ האיטום, בדק בית ואפיון ציפויים לתעשיה."
  />
  <ProjectsSection featuredOnly={false} />
</Layout>
