---
import Layout from "../layouts/Layout.astro";
import PageHeader from "@components/PageHeader.astro";
import ContactForm from "@components/ContactForm.jsx";
import SEOHead from "@components/SEOHead.astro";
import { siteConfig } from "../seo/seoData";

const pageTitle = "צור קשר - דותן מאיר יועץ איטום ובדק בית";
const pageDescription =
  "צרו קשר עם דותן מאיר לקבלת ייעוץ מקצועי בנושאי איטום ובדק בית. טלפון: 052-427-0479, אימייל: d.meyers.cons@gmail.com. שירות אישי ומקצועי";
---

<Layout title={pageTitle} description={pageDescription}>
  <SEOHead
    slot="head"
    title={pageTitle}
    description={pageDescription}
    canonical={`${siteConfig.url}/contact`}
    pageType="contact"
    breadcrumbs={[
      { name: "ראשי", url: siteConfig.url },
      { name: "צור קשר", url: `${siteConfig.url}/contact` }
    ]}
  />

  <PageHeader title="צור קשר" description="נשמח לענות לכל שאלה ולקבוע פגישת ייעוץ" />

  <section class="from-surface to-background bg-gradient-to-b py-16">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 gap-12 lg:grid-cols-2">
        <!-- Contact Information Card -->
        <div
          class="border-border bg-surface/50 hover:border-border-hover rounded-xl border p-8 shadow-2xl backdrop-blur-sm transition-all">
          <h2 class="text-text-primary mb-8 text-3xl font-bold">פרטי התקשרות</h2>

          <div class="space-y-6">
            <a
              href="tel:0524270479"
              class="bg-background-tertiary/50 hover:bg-background-tertiary flex items-center gap-4 rounded-lg p-4 transition-all">
              <div class="bg-primary/10 flex h-12 w-12 items-center justify-center rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="text-primary-light h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                  ></path>
                </svg>
              </div>
              <span class="text-text-primary text-lg">052-427-0479</span>
            </a>

            <a
              href="mailto:d.meyers.cons@gmail.com"
              class="bg-background-tertiary/50 hover:bg-background-tertiary flex items-center gap-4 rounded-lg p-4 transition-all">
              <div class="bg-primary/10 flex h-12 w-12 items-center justify-center rounded-full">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="text-primary-light h-6 w-6"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  aria-hidden="true">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                  ></path>
                </svg>
              </div>
              <span class="text-text-primary text-lg">d.meyers.cons@gmail.com</span>
            </a>

            <div class="bg-background-tertiary/50 mt-8 rounded-lg p-6">
              <h3 class="text-text-primary mb-4 text-xl font-semibold">שעות פעילות</h3>
              <div class="space-y-2">
                <p class="text-text-secondary">ימים א'-ה': 8:00 - 18:00</p>
                <p class="text-text-secondary">יום ו': 8:00 - 13:00</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Contact Form Card -->
        <div
          class="border-border bg-surface/50 hover:border-border-hover rounded-xl border p-8 shadow-2xl backdrop-blur-sm transition-all">
          <h2 class="text-text-primary mb-8 text-3xl font-bold">השאירו פרטים ונחזור אליכם בהקדם</h2>
          <ContactForm client:load />
        </div>
      </div>
    </div>
  </section>
</Layout>
