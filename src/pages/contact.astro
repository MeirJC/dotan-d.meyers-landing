---
import Layout from "../layouts/Layout.astro";
import PageHeader from "@components/PageHeader.astro";
import ContactForm from "@components/ContactForm.astro";
import { SEO } from "astro-seo";
import { seoData, generateSeoData } from "../seo/seoData";

const pageTitle = "צור קשר | דותן מאיר - יועץ איטום ובדק בית";
const pageDescription =
  "צרו קשר עם דותן מאיר לקבלת ייעוץ מקצועי בנושאי איטום ובדק בית. שירות אישי ומקצועי";

// Generate page-specific SEO data
const pageSeoData = generateSeoData({
  title: pageTitle,
  description: pageDescription,
  canonical: "https://www.dmeyers.pro/contact",
  openGraph: {
    basic: {
      title: pageTitle,
      description: pageDescription,
      image: "/dmeyers-og.jpg"
    }
  },
  twitter: {
    title: pageTitle,
    description: pageDescription,
    image: "/dmeyers-og.jpg"
  }
});
---

<Layout title={pageTitle} description={pageDescription}>
  <SEO
    title={pageSeoData.title}
    description={pageSeoData.description}
    canonical={pageSeoData.canonical}
    noindex={pageSeoData.noindex}
    nofollow={pageSeoData.nofollow}
    openGraph={pageSeoData.openGraph}
    twitter={pageSeoData.twitter}
    extend={{
      meta: seoData.additionalMetaTags,
      link: seoData.additionalLinkTags
    }}
  />
  <script type="application/ld+json" set:html={JSON.stringify(pageSeoData.structuredData)} />

  <PageHeader title="צור קשר" description="נשמח לענות לכל שאלה ולקבוע פגישת ייעוץ" />

  <section class="bg-gray-800 py-12">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 gap-8 lg:grid-cols-2">
        <div class="rounded-lg bg-gray-700 p-6 shadow-lg md:p-8">
          <h2 class="mb-6 text-2xl font-bold text-white">פרטי התקשרות</h2>

          <div class="space-y-4">
            <div class="flex items-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="ml-3 h-6 w-6 text-blue-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"
                ></path>
              </svg>
              <span class="text-white">052-427-0479</span>
            </div>

            <div class="flex items-center">
              <svg
                xmlns="http://www.w3.org/2000/svg"
                class="ml-3 h-6 w-6 text-blue-400"
                fill="none"
                viewBox="0 0 24 24"
                stroke="currentColor">
                <path
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  stroke-width="2"
                  d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                ></path>
              </svg>
              <span class="text-white">d.meyers.cons@gmail.com</span>
            </div>

            <div class="mt-8">
              <h3 class="mb-4 text-lg font-semibold text-white">שעות פעילות</h3>
              <p class="text-gray-300">ימים א'-ה': 8:00 - 18:00</p>
              <p class="text-gray-300">יום ו': 8:00 - 13:00</p>
            </div>
          </div>
        </div>

        <div class="rounded-lg bg-gray-700 p-6 shadow-lg md:p-8">
          <h2 class="mb-6 text-2xl font-bold text-white">השאירו פרטים ונחזור אליכם בהקדם</h2>
          <ContactForm />
        </div>
      </div>
    </div>
  </section>
</Layout>
