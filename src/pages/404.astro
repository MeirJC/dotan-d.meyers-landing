---
import Layout from "../layouts/Layout.astro";
import PageHeader from "@components/PageHeader.astro";
import SEOHead from "@components/SEOHead.astro";
import { siteConfig } from "../seo/seoData";

const pageTitle = "404 - דף לא נמצא";
const pageDescription = "הדף שחיפשת לא נמצא. חזרו לדף הבית או צרו קשר לקבלת עזרה.";
---

<Layout title={pageTitle} description={pageDescription}>
  <SEOHead
    slot="head"
    title={pageTitle}
    description={pageDescription}
    canonical={`${siteConfig.url}/404`}
    noindex={true}
    nofollow={true}
  />

  <PageHeader title="404 - דף לא נמצא" description="הדף שחיפשת לא נמצא במערכת" />

  <section class="from-surface to-background bg-gradient-to-b py-16">
    <div class="container mx-auto px-4">
      <div class="mx-auto max-w-2xl text-center">
        <div class="mb-8">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            class="text-primary-light mx-auto h-24 w-24"
            fill="none"
            viewBox="0 0 24 24"
            stroke="currentColor"
            aria-hidden="true">
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M9.172 16.172a4 4 0 015.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
            ></path>
          </svg>
        </div>
        <h2 class="text-text-primary mb-4 text-3xl font-bold">אופס! משהו השתבש</h2>
        <p class="text-text-secondary mb-8 text-lg">
          הדף שחיפשת לא נמצא במערכת. ייתכן שהדף הועבר או נמחק.
        </p>
        <div class="flex justify-center gap-4">
          <a
            href="/"
            class="bg-primary text-primary-foreground hover:bg-primary-hover focus-visible:ring-ring rounded-lg px-6 py-3 transition-all focus:outline-none focus-visible:ring-2">
            חזרה לדף הבית
          </a>
          <a
            href="/contact"
            class="border-primary text-primary-light hover:bg-primary/10 focus-visible:ring-ring rounded-lg border px-6 py-3 transition-all focus:outline-none focus-visible:ring-2">
            צור קשר
          </a>
        </div>
      </div>
    </div>
  </section>
</Layout>
