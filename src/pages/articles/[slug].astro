---
import Layout from "../../layouts/Layout.astro";
import { articlesData } from "@data/articlesData";

export function getStaticPaths() {
  return articlesData.map((article) => ({
    params: { slug: article.slug },
    props: { article }
  }));
}

const { article } = Astro.props;

const pageTitle = `${article.title} | דותן מאיר - יועץ איטום`;
const pageDescription = article.excerpt;
---

<Layout title={pageTitle} description={pageDescription}>
  <div class="bg-gray-800 py-12">
    <div class="container mx-auto px-4">
      <div class="mx-auto max-w-4xl">
        <nav class="mb-8 flex" aria-label="Breadcrumb">
          <ol class="inline-flex items-center space-x-1 space-x-reverse md:space-x-3">
            <li class="inline-flex items-center">
              <a
                href="/"
                class="inline-flex items-center text-sm font-medium text-gray-300 hover:text-white">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="ml-2 h-4 w-4"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"
                  ></path>
                </svg>
                ראשי
              </a>
            </li>
            <li>
              <div class="flex items-center">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 text-gray-300"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 19l-7-7 7-7"></path>
                </svg>
                <a href="/articles" class="mr-1 text-sm font-medium text-gray-300 hover:text-white"
                  >מאמרים</a
                >
              </div>
            </li>
            <li aria-current="page">
              <div class="flex items-center">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="h-5 w-5 text-gray-300"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 19l-7-7 7-7"></path>
                </svg>
                <span class="mr-1 max-w-xs truncate text-sm font-medium text-gray-300"
                  >{article.title}</span
                >
              </div>
            </li>
          </ol>
        </nav>

        <article class="overflow-hidden rounded-lg bg-gray-700 shadow-xl">
          {
            article.image && (
              <img
                src={article.image.src}
                alt={article.title}
                class="h-64 w-full object-cover md:h-80"
              />
            )
          }

          <div class="p-6 md:p-8">
            <div class="mb-4 flex items-center justify-between">
              <span class="text-sm text-blue-400">{article.date}</span>
              <span class="rounded-full bg-blue-600 px-2 py-1 text-xs text-white"
                >{article.category}</span
              >
            </div>

            <h1 class="mb-6 text-3xl font-bold text-white md:text-4xl">{article.title}</h1>

            <div class="prose prose-lg prose-invert max-w-none" set:html={article.content} />

            <div class="mt-10 border-t border-gray-600 pt-6">
              <a
                href="/articles"
                class="inline-flex items-center text-blue-400 hover:text-blue-300">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  class="ml-1 h-5 w-5"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor">
                  <path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M15 19l-7-7 7-7"></path>
                </svg>
                חזרה למאמרים
              </a>
            </div>
          </div>
        </article>
      </div>
    </div>
  </div>
</Layout>
