---
import Layout from "../layouts/Layout.astro";
import Hero from "@sections/Hero.astro";
import Features from "@sections/Features.astro";
import SEOHead from "@components/SEOHead.astro";
import { siteConfig } from "../seo/seoData";

const pageTitle = "ייעוץ איטום ובדק בית | דותן מאיר - מומחה לפתרונות איטום מתקדמים";
const pageDescription =
  "דותן מאיר - יועץ איטום מוסמך ומומחה לבדק בית עם ניסיון של מעל 23 שנים. שירותי ייעוץ איטום מקצועי, בדיקות מבנה ופתרונות איטום מתקדמים לפרויקטים ציבוריים ופרטיים";
---

<Layout title={pageTitle} description={pageDescription}>
  <SEOHead
    slot="head"
    title={pageTitle}
    description={pageDescription}
    canonical={`${siteConfig.url}/`}
    pageType="home"
    breadcrumbs={[{ name: "ראשי", url: siteConfig.url }]}
  />

  <Hero />
  <Features />
</Layout>
