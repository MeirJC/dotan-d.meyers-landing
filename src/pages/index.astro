---
import Layout from "../layouts/Layout.astro";
import Hero from "@sections/Hero.astro";
import Features from "@sections/Features.astro";
import Projects from "@sections/Projects.astro";

const pageTitle = "ייעוץ איטום ובדק בית | דותן מאיר - מומחה לפתרונות איטום מתקדמים";
const pageDescription =
  "דותן מאיר - יועץ איטום מוסמך ומומחה לבדק בית. שירותי ייעוץ איטום מקצועי, בדיקות מבנה, ופתרונות איטום מתקדמים";
